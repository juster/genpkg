set provides {perl-app-perlbrew=$pkgver}
move makedepends {perl-io-all perl-path-class} checkdepends
setdep makedepends perl-extutils-makemaker>=5.59
set license custom:MIT
fappend package {
	install -d -m 755 "$pkgdir"/usr/share/licenses/perlbrew
	install -m 644 LICENSE "$pkgdir"/usr/share/licenses/perlbrew/LICENSE
}
